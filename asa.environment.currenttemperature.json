{
  "id": "http://openinterconnect.org/asamapping/schemas/asa.environment.currenttemperature.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "Current Temperature",
  "definitions": {
    "asa.environment.currenttemperature": {
      "type": "object",
      "properties": {
        "currentvalue": {
          "type": "number",
          "description": "Measured value",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "to-ocf": [
              "temperature = currentValue",
              "units = C"
            ],
            "from-ocf": {
              "oneOf": [
                {
                  "properties": {
                    "units": "string",
                    "enum": ["C"]
                  },
                  "from-ocf": [
                    "currentvalue = temperature"
                  ]
                },
                {
                  "properties": {
                    "units": "string",
                    "enum": ["F"]
                  },
                  "from-ocf": [
                    "currentvalue = (temperature-32)*5/9"
                  ]
                },
                {
                  "properties": {
                    "units": "string",
                    "enum": ["K"]
                  },
                  "from-ocf": [
                    "currentvalue = temperature-273.15"
                  ]
                }
              ]
            }
          }
        },
        "precision": {
          "type": "number",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "description": "Mapped to vendor defined Property (x.org.alljoyn)"
          }
        },
        "updatemintime": {
          "type": "integer",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "description": "Mapped to vendor defined Property (x.org.alljoyn)"
          }
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "#/definitions/asa.environment.currenttemperature"}
  ],
  "required": [ "currentvalue","precision","updatemintime" ]
}
