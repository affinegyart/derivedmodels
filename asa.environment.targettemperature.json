{
  "id": "http://openinterconnect.org/asamapping/schemas/asa.environment.targettemperature.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "Target Temperature",
  "definitions": {
    "asa.environment.targettemperature": {
      "type": "object",
      "properties": {
        "targetvalue": {
          "type": "number",
          "description": "Measured value",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "to-ocf": [
              "temperature = targetvalue",
              "units = C"
            ],
            "from-ocf": {
              "oneOf": [
                {
                  "properties": {
                    "units": "string",
                    "enum": ["C"]
                  },
                  "from-ocf": [
                    "targetvalue = temperature"
                  ]
                },
                {
                  "properties": {
                    "units": "string",
                    "enum": ["F"]
                  },
                  "from-ocf": [
                    "targetvalue = (temperature-32)*5/9"
                  ]
                },
                {
                  "properties": {
                    "units": "string",
                    "enum": ["K"]
                  },
                  "from-ocf": [
                    "targetvalue = temperature-273.15"
                  ]
                }
              ]
            }
          }
        },
        "minvalue": {
          "type": "number",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "to-ocf": [
              "range[0] = minvalue"
            ],
            "from-ocf": [
              "minvalue = range[0]",
              "otherwise: minvalue = -MAXINT"
            ]
          }
        },
        "maxvalue": {
          "type": "number",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "to-ocf": [
              "range[1] = maxvalue"
            ],
            "from-ocf": [
              "maxvalue = range[1]",
              "otherwise: maxvalue = MAXINT"
            ]
          }
        },
        "step": {
          "type": "number",
          "ocf-conversion": {
            "ocf-alias": "oic.r.temperature",
            "to-ocf": [
              "if asa.step > 0, ocf.step = asa.step"
            ],
            "from-ocf": [
              "step = step",
              "otherwise: step = undefined (0x00)"
            ]
          }
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "#/definitions/asa.environment.targettemperature"}
  ],
  "required": [ "targetvalue","minvalue","maxvalue","step" ]
}
